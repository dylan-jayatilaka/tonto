{ 

   keyword_echo_on

   name= list4_disp

!  read_g09_fchk_file 6.list4_disp.fchk


   ! Process the CIF
   CIF= {
       file_name= 5.list4_disp.cartesian.cif2
    }

   process_CIF

   name= list4_disp

   dispersion_coefficients= {
   C     0.01788    0.00908 H     0.00000    0.00000  S     0.33378    0.55844 O     0.04960    0.03234
   }

   charge= 0
   multiplicity= 1

   crystal= {    
      xray_data= {   
         partition_model=        oc-hirshfeld 
         thermal_smearing_model= one-center
         optimise_extinction= false
         correct_dispersion= no
         optimise_scale_factor= true
         wavelength= 1.54184 Angstrom
         refine_4th_order_for_atoms= { S1 } 
         REDIRECT list4_F2.hkl
         f_sigma_cutoff= 4
         tol_for_shift_on_esd= 0.010000
         refine_H_U_iso= yes 

	 show_fit_output= TRUE
	 show_fit_results= TRUE

      }  
   }  

   ! Geometry    
   put

   IAM_refinement

   put_minmax_residual_density

   ! Clean up
!  delete_scf_archives

}

