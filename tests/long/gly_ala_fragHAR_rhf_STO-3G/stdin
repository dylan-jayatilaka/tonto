{

   keyword_echo_on

   name= glyala

   basis_name= STO-3G

   cif= {
      file_name= gly_ala_100K.cif
      mmCIF_format= TRUE
   }
   process_cif

   name= glyala

   crystal= {

      xray_data= {

         thermal_smearing_model= hirshfeld
         optimise_extinction= NO
         wavelength= 0.59960

         do_residual_cube= FALSE

         use_disk_SFs= yes ! <<<<<<<<<<<
       ! use_text_sfs= YES

         REDIRECT gly_ala_100K.hkl

         show_refinement_output=  FALSE
         show_refinement_results= TRUE

      }
   }

   put

   scfdata= {
      kind= fragment-rhf
      initial_density= promolecule
      damp_factor= 0.99
      level_shift= 100
   }
 ! scf

   ! Change charge/multiplicity
   atom_groups= {

      keys= { charge= }

      altered_data= { 
         1  1 
         2 -1
      }

   }

   fraghar_refinement

}
