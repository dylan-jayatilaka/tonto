{ 

   keyword_echo_on

   name= 4-urea_Tonto_HAR_explicit

   basis_directory= ~/github/tonto-rnp/basis_sets

   ! Process the CIF
   CIF= { file_name= urea.cif }

   process_CIF

   name= 4-urea_Tonto_HAR_explicit

   cluster= {
      defragment= true
      make_info
   }

   create_cluster

   put

   name= 4-urea_Tonto_HAR_explicit

   cluster= {
      generation_method= within_radius
      radius= 3 Angstrom
      defragment= true
      make_info
   }

   create_cluster

   name= 4-urea_Tonto_HAR_explicit

   put
   put_grown_cif
   put_cif

}

