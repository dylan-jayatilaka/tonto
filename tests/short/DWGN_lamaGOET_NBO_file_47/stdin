{ 

   keyword_echo_on

   name= 4-DWGN_g09_opt

   read_g09_fchk_file 1.4-DWGN_g09_opt.fchk


   charge= 0
   multiplicity= 1


   crystal= {    

      spacegroup= { hall_symbol= '-p 2yn' }

      unit_cell= {

         angles=       90.000000(0)   97.107(5)   90.000000(0)   Degree
         dimensions=   3.7170(10)   19.513(6)   13.440(4)   Angstrom

      }

   }  

   ! Geometry    
   put

     ! SC cluster charge SCF
      scfdata= {
      initial_MOs= restricted   
      kind= rhf
      output= true 
      use_SC_cluster_charges= TRUE
      cluster_radius= 8 angstrom
      defragment= true
      save_cluster_charges= true
      convergence= 0.001
      diis= { convergence_tolerance= 0.0002 }
      output= YES
      output_results= YES
   }

   make_scf_density_matrix
   assign_NOs_to_MOs 
   make_hirshfeld_inputs
   make_fock_matrix
   put_NBO_file_47

   ! SC cluster charge SCF
   scfdata= {
      initial_density= promolecule
      initial_MOs= restricted   
      kind= rhf
      output= true 
      use_SC_cluster_charges= TRUE
      cluster_radius= 8 angstrom
      defragment= true
      put_cluster
      put_cluster_charges

   }

   write_xyz_file

   put_grown_cif

}
