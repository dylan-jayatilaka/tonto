   ENSURE(.atom.created,  "no atom list")
   ENSURE(.basis_info_made, "no basis info")

      c,neta,i,j :: INT
      atom :: ATOM*
      Zc :: MAT{REAL}*
      gga,ggb :: REAL
      ccm,Zb,buco :: MAT{REAL}*

      ! Calculate the primitive integrals
