       E(i)= c * sqrt(P2(i) + c * c)
       p(i)=sqrt(P2(i))
       ep(i)=sqrt(ONE+P2(i)*alpha2) 
       Ap(i)= sqrt( (E(i) + c * c)/(TWO * E(i)) )  
       bp(i)=ONE/(ep(i)+ONE)

     end  
    P2.destroy

