      R.create(.n_prim,.n_prim)
      .::make_primitive_overlap_matrix(R)

      S.create(n_gcm,n_gcm)
      .::get_da_gcm_now(R,S,m_out)  
      m_out.destroy
      R.destroy

      evec.create(n_gcm,n_gcm)
