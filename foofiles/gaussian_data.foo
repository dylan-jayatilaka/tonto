      ! Now assign the transformation matrices
      tr(0).element = ONE
      tr(1).element = R
      tr(2).element = GAUSSIAN_DATA::d_xyz_rep_matrix_for(R)
      tr(3).element = GAUSSIAN_DATA::f_xyz_rep_matrix_for(R)
      tr(4).element = GAUSSIAN_DATA::g_xyz_rep_matrix_for(R)

