     else

       do c = 1,.n_bf
         do d = 1,c-1
           Dx=v(:,d,c,:)
           v(:,d,c,:) = v(:,c,d,:)
           v(:,c,d,:) = Dx
         end
       end
       Dx_archive.write(v)

     end
     Dx.destroy

     ! Do y component
     v = ZERO
     do a = 1,n_bf
       do b = 1,a-1
         v(a,b,:,:) =  Dy * S(a,b) + S * Dy(a,b)
         v(a,b,:,:).change_basis_using(P)
         v(b,a,:,:) = v(a,b,:,:)
       end
       v(a,a,:,:) =  Dy * S(a,a) + S *Dy(a,a)
       v(a,a,:,:).change_basis_using(P)
     end

     do c = 1,n_bf
       do d = 1,c-1
         v(:,:,c,d).change_basis_using(P)
         v(:,:,d,c) = v(:,:,c,d)
       end
