      Va,Vb :: MAT{REAL}, target, INOUT
      Ea,Eb :: REAL, INOUT
      V0a,V0b,E0 :: VEC{REAL}, IN
      bf_skip :: VEC{EVEC{BIN}}, IN
      bf_grid0 :: VEC{EMAT{REAL}}, IN
      c :: INT, IN
