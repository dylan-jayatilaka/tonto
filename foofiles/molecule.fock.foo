     end

     if (present(new_n_bf)) then

       new_v = v(1:new_n_bf,1:new_n_bf,1:new_n_bf,1:new_n_bf)

       Dy.shrink(new_n_bf,new_n_bf)

       do c = 1,new_n_bf
         do d = 1,c-1
           Dy = new_v(:,d,c,:)
           new_v(:,d,c,:) = new_v(:,c,d,:)
           new_v(:,c,d,:) = Dy
         end
       end
       Dy_archive.write(new_v)

     else

       do c = 1,.n_bf
         do d = 1,c-1
           Dy = v(:,d,c,:)
           v(:,d,c,:) = v(:,c,d,:)
           v(:,c,d,:) = Dy
         end
       end
       Dy_archive.write(v)
     end
     Dy.destroy

     ! Do z component
     v = ZERO
     do a = 1,n_bf
       do b = 1,a-1
         v(a,b,:,:) =  Dz * S(a,b) + S * Dz(a,b)
         v(a,b,:,:).change_basis_using(P)
         v(b,a,:,:) = v(a,b,:,:)
       end
       v(a,a,:,:) =  Dz * S(a,a) + S *Dz(a,a)
       v(a,a,:,:).change_basis_using(P)
     end

     do c = 1,n_bf
       do d = 1,c-1
         v(:,:,c,d).change_basis_using(P)
         v(:,:,d,c) = v(:,:,c,d)
       end
       v(:,:,c,c).change_basis_using(P)
     end

     if (present(new_n_bf)) then

       new_v = v(1:new_n_bf,1:new_n_bf,1:new_n_bf,1:new_n_bf)

       Dz.shrink(new_n_bf,new_n_bf)

       do c = 1,new_n_bf
         do d = 1,c-1
           Dz = new_v(:,d,c,:)
           new_v(:,d,c,:) = new_v(:,c,d,:)
           new_v(:,c,d,:) = Dz
         end
       end
       Dz_archive.write(new_v)

     else

       do c = 1,.n_bf
         do d = 1,c-1
           Dz = v(:,d,c,:)
           v(:,d,c,:) = v(:,c,d,:)
           v(:,c,d,:) = Dz
         end
       end
       Dz_archive.write(v)

     end
     Dz.destroy

     P.destroy
     S.destroy
     new_v.destroy
     v.destroy

   end

