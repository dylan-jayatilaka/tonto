         eri_archive.Bfile.read(I)

         do d = fd,ld
           do c = fc,lc
             do b = fb,lb
               P_db = P(d,b)
               P_cb = P(c,b)
               do a = fa,la
                  I_abcd = I(a,b,c,d)
