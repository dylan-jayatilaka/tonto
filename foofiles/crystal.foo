   make_CIF_esds(cif,atom,esd)
   ! Make the crystal-axis-system "esd"s in the pADPs for the "atom"
   ! list for "cif" file output. Positions are in unitless and ADP's
   ! are in bohr^2. For anharmonic constants, the "cif.GC_format"
   ! variable defines format, labels, and units.
      self :: IN
      cif :: CIF, IN
      atom :: VEC{ATOM}, IN
      esd :: VEC{REAL}, OUT

   ENSURE(.data.created,"no data")
   ENSURE(.data.covariance_matrix.created,"no covariance_matrix")


      T,C :: MAT{REAL}*
      n_pADPs :: INT
      a,n, ab,af,al :: INT

      ! No of pADPs
      n_pADPs = atom.no_of_pADPs
      DIE_IF(esd.dim/=n_pADPs,"wrong size, esd")

      ! Get standard deviations and covariances
      ! ... in crystal coordinates
      C.create(n_pADPs,n_pADPs)
      C = ZERO

      ! The covariance matrix transformation matrix
      ! This is only applied to the diagonal blocks.
      T.create(34,34)
      T = ZERO
      if (cif.GC_format=="u") then ! dimensioned anharmonics
         GAUSSIAN_DATA:symmetric_tensor_product_mx(T,.unit_cell.reciprocal_U_matrix)
         T(1:3,1:3) = .unit_cell.inverse_matrix ! Reset positional transform
      else                         ! dimensionless anharmonics
         T(1:3,1:3) = .unit_cell.inverse_matrix ! Reset positional transform
         GAUSSIAN_DATA::symmetric_tensor_2_product_mx(T( 4: 9, 4: 9),.unit_cell.reciprocal_U_matrix)
         GAUSSIAN_DATA::symmetric_tensor_3_product_mx(T(10:19,10:19),.unit_cell.reciprocal_matrix)
         GAUSSIAN_DATA::symmetric_tensor_4_product_mx(T(20:34,20:34),.unit_cell.reciprocal_matrix)
      end

      do a = 1,atom.dim

         ! Block limits
         n  = atom(a).no_of_pADPs
         ab = atom.no_of_pADPs_up_to_atom(a)
         af = ab +  1
         al = ab + n

         ! Transform ...
         .data.covariance_matrix(af:al,af:al).back_transform_to(C(af:al,af:al),T(1:n,1:n))

      end

      ! Get the esd's ... only diagonal (blocks) needed
      C.put_diagonal_to(esd)

      ! Clean
      C.destroy
      T.destroy

   end

   put_asymm_unit_CIF(cif,psi)
   ! Put out a standard asymmetric-unit "cif" file
      cif :: CIF, IN
      psi :: VEC{STR}, IN

   ENSURE(.asymmetric_unit_atom.created,"no asymmetric_unit_atom list")

      has_covariances :: BIN
      n_pADPs :: INT
      esd :: VEC{REAL}*

      ! Spacegroup information
      .spacegroup.put_CIF

      ! Unit cell information
      .unit_cell.put_CIF(.Z)

      ! Put the coordinate information
      .asymmetric_unit_atom.change_axis_system_to("crystal",.unit_cell)

      ! Covariances?
      has_covariances = .has_covariance_matrix
      if (has_covariances) then

         ! Put refinement special info
         .data.put_CIF_refinement(psi)

         ! Get crystal errors
         n_pADPs = .asymmetric_unit_atom.no_of_pADPs
         esd.create(n_pADPs)
         .make_CIF_esds(cif,.asymmetric_unit_atom,esd)
         esd = sqrt(esd)

         ! Put to Cif with errors
         .asymmetric_unit_atom.put_CIF_with_errors(cif,esd)
         esd.destroy

      else

         .asymmetric_unit_atom.put_CIF(cif)

      end

      ! Change back
      .asymmetric_unit_atom.change_axis_system_to("cartesian",.unit_cell)

      ! Put the reflection data
      if (.data.created) then
         .data.put_CIF_covariance_matrix("asym_unit",.data.covariance_matrix)
         .data.reflections.put_CIF
      end

   end

