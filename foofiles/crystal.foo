      if (.data.associated) then
      if (.data.reflections.associated) then
         thresh = .data.CIF_threshold_expression
         .data.reflections.put_CIF_refln_data(thresh)
      end
      end

      ! Put the reflection data
      if (.data.associated) then
      if (.data.reflections.associated) then
       ! .put_xd_fco
      end
      end

