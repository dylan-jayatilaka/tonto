   make_residual_error_map(map,pts) !::: PURE - this will not allow to compile for mpich2
   ! Make the crystal residual error "map" for the supplied points "pts" from
   ! the crystal structure factors
      self :: IN
      map :: VEC{REAL}, OUT
      pts :: MAT{REAL}, IN

   ENSURE(.data.created, "no diffraction data")
   ENSURE(.data.reflections.created, "no structure factors")
   ENSURE(.data.have_F_calc, "no calculated structure factors")
   ENSURE(.data.have_F_exp, "no experimental structure factors")
   ENSURE(pts.dim2==3,  "incorrect dimension for points array")

      k  :: MAT{REAL}*
      pv,kv :: VEC{REAL}(3)
      dF,phase :: VEC{CPX}*
      fac,res,kp :: REAL
      ci  :: CPX
      n_refl,n,r :: INT

      ! Constants
      n_refl = .data.reflections.dim
      ci = IMAGIFY(ONE)

      ! K points
      k.create(n_refl,3)
      .make_k_pts(k)

      ! Get phased structure factor differences
      ! (without extinction/scale factor correction)
      dF.create(n_refl)
      phase.create(n_refl)

      phase = .data.reflections.F_calc/abs(.data.reflections.F_calc)
      dF    = (.data.reflections.F_exp - .data.reflections.F_pred) * phase
      dF    = dF/.F_extinction_correction

      phase.destroy

      ! Calculate residual map
      fac = TWO/.unit_cell.volume
      map = ZERO
      parallel do n = 1,pts.dim1

         pv = pts(n,:)

         res = ZERO
         do r = 1,n_refl
            kv  = k(r,:)
            kp  = kv(1)*pv(1)+kv(2)*pv(2)+kv(3)*pv(3)
            res = res + REALIFY(dF(r)*exp(ci*kp))
         end

         map(n) = fac*res

      end

      if (DO_IN_PARALLEL) then
         PARALLEL_SUM(map)
      end

      ! Clean
      dF.destroy
      k.destroy

   end

