!  ====
!  Copy
!  ====

   create_copy(scfdata) ::: leaky
   ! Create a copy of the "scfdata" object
      self :: PTR
      scfdata :: SCFDATA
      .create
      .copy(scfdata)
   end

   copy(scfdata) ::: leaky
   ! Make a copy of the "scfdata" object
      scfdata :: SCFDATA

      self = scfdata

      .nullify_ptr_part

      .diis.copy(scfdata.diis)

      if (scfdata.CP_diis.associated)    .CP_diis.create_copy(scfdata.CP_diis)

      if (scfdata.crystal.associated)    .crystal => scfdata.crystal

      if (scfdata.cluster.associated) &
         .cluster.create_copy(scfdata.cluster)
      if (scfdata.cluster_charges.associated) &
         .cluster_charges.create_copy(scfdata.cluster_charges)
      if (scfdata.cluster_charge_positions.associated) &
         .cluster_charge_positions.create_copy(scfdata.cluster_charge_positions)

      if (scfdata.table_info.associated) .table_info.create_copy(scfdata.table_info)
      if (scfdata.table.associated)      .table.create_copy(scfdata.table)

   end

