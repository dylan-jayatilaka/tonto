   set_margin_info(n_notes)
   ! Set the margin information "info" for the SCF iterations
      n_notes :: INT, optional, OUT

      n,i,s :: INT

      diff_converged :: BIN, save
      diis_converged :: BIN, save
      diis_save      :: BIN, save
      diis_start     :: BIN, save
      diis_up        :: BIN, save
      damping_on     :: BIN, save
      damping_off    :: BIN, save
      level_on       :: BIN, save
      level_off      :: BIN, save

      ! Initialize saved switches
      if (.iteration <= 0) then

         diff_converged = FALSE

         diis_converged = FALSE
         diis_save      = FALSE
         diis_start     = FALSE
         diis_up        = FALSE

         damping_on     = FALSE
         damping_off    = FALSE

         level_on       = FALSE
         level_off      = FALSE

      end

      ! Initialize info
      n = 0
      .table_info(1)[:] = " "

      ! No notes ...
      if (.scf_done) return

      ! Set margin info ...
      if (NOT diff_converged AND .delta_converged AND .iteration>0) then
         n = n + 1
         .table_info(1)[n] = " *Difference has converged"
         diff_converged = TRUE
      end

      if (NOT diis_converged AND .diis.is_converged) then
         n = n + 1
         .table_info(1)[n] = " *Gradient has converged"
         diis_converged = TRUE
      end

      if (.apply_damping AND NOT damping_on) then
         n = n + 1
         .table_info(1)[n] = " *Damping on"
         damping_on = TRUE
      else if (NOT .apply_damping AND NOT damping_off) then
         n = n + 1
         .table_info(1)[n] = " *Damping was off"
         damping_off = TRUE
      end

      if (.apply_level_shifting AND NOT level_on) then
         n = n + 1
         .table_info(1)[n] = " *Levelshift on"
         level_on = TRUE
      else if (NOT .apply_level_shifting AND NOT level_off) then
         n = n + 1
         .table_info(1)[n] = " *Levelshift was off"
         level_off = TRUE
      end

      if (.using_diis) then

         if (.diis.saved_iteration==0 AND NOT diis_save) then
            n = n + 1
            .table_info(1)[n] = " *DIIS starts saving now"
            diis_save = TRUE
         end

         if (.diis.actual_iteration==0 AND NOT diis_start) then
            n = n + 1
            .table_info(1)[n] = " *DIIS extrapolates now"
            diis_start = TRUE
         end

         if (.diis.subspace_saturated AND diis_up) then
            n = n + 1
            i = .diis.replaced_iteration
            s = .diis.new
            .table_info(1)[n] = " *DIIS replaced saved #"//trim(s.to_str)//" iter #"//trim(i.to_str)
         end

         if (.diis.kept<=2 AND diis_up) then
            n = n + 1
            i = .diis.iter_4(1) - 1
            s = .diis.new
            if (.diis.kept==1) then
            .table_info(1)[n] = " *DIIS stuck, total reset"
            else
            .table_info(1)[n] = " *DIIS stuck, kept saved #"//trim(s.to_str)//" iter #"//trim(i.to_str)
            end
            diis_up = FALSE
         end

         ! This must come last
         if (.diis.subspace_saturated AND NOT diis_up) then
            n = n + 1
            .table_info(1)[n] = " *DIIS subspace is saturated"
            diis_up = TRUE
         end

      end

      if (present(n_notes)) n_notes = n

   end

   reset
   ! Reset SCF energy and iteration data , but don't change
   ! nuclear_repulsion_energy, convergence, direct, or max_it options

      ! Stored total energy/Lagrangian
      .energy        = ZERO
      .fit_value     = ZERO
      .old_fit_value = ZERO

      ! Stored part-energies
      .nuclear_attraction_energy = ZERO ! Electron-nuclear attraction energy
      .charge_attraction_energy  = ZERO ! Point-charge attraction energy
      .electron_repulsion_energy = ZERO ! Electron-electron repulsion energy
      .kinetic_energy            = ZERO ! Electron kinetic energy
      .old_energy                = ZERO

      ! Iteration count
      .iteration        = 0
      .total_iterations = 0
      .lambda_iteration = 0
      .penalty          = ZERO

      ! DIIS (leaky)
      .diis.reset_iteration_defaults

      ! DIIS (leaky)
      .bfgs.set_defaults

   end

   reset_for_next_lambda ::: leaky
   ! Reset a few things for the next constrained-scf lambda iteration:

      ! Reset iteration & margin info
      .iteration = -1
      .set_margin_info

      ! DIIS (leaky)
      .diis.reset_iteration_defaults

   end

   reset_CP(n_pert)
   ! Reset the "n_pert" CPHF diis extrapolators
      self :: INOUT
      n_pert :: INT, IN

      ! Reset iterations
      .reset

      ! Set defaults
      .set_n_pert(n_pert)
      .set_using_damping(FALSE)
      .set_using_level_shift(FALSE)
      .set_min_iterations(max(2,.min_iterations))

      ! Set DIIS defaults
      .diis.set_convergence_tolerance(TOL(4))
      .diis.set_keep(4)

      ! CPHF DIIS (leaky)
      .CP_diis.destroy
      .CP_diis.create(n_pert)
      .CP_diis.set_defaults(.diis)
      .CP_diis.set_use_errors(TRUE)

   end

   update_lambda ::: pure
   ! Increments lambda by lambda_step
      self :: INOUT

      .lambda           = .lambda + .lambda_step
      .lambda_iteration = .lambda_iteration + 1
      .old_fit_value    = .old_energy + .lambda * .old_penalty
      .fit_value        = .energy + .lambda * .penalty

   end

   update_iteration ::: pure
   ! Update the SCF iteration
      self :: INOUT

      .iteration        = .iteration + 1
      .total_iterations = .total_iterations + 1

   end

   update_energy(energy)
   ! Update the energy and penalty needed in constrained fits.
      energy :: REAL, IN

      ! Keep old values
      .old_energy    = .energy
      .old_fit_value = .fit_value

      ! Set new values
      .energy = energy
      if (.fitting) then
         .set_penalty
         .fit_value = energy + .lambda * .penalty
      end

      ! Set initiual energy
      if (.iteration==0) then 
         .E_initial = .energy
      end

      ! Set energy differences
      .delta = .energy - .old_energy

   end

   update_diis_from_CP_diis
   ! Update the CP vector difference
      self :: INOUT

      .diis.set_to(.CP_diis(1))

   end

   update_CP_difference(delta) ::: pure
   ! Update the CP vector difference
      self :: INOUT
      delta :: REAL, IN

      ! Set energy differences
      .delta = delta 

   end

