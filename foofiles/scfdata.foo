   put_table_body_and_footer(flush)
   ! Print out the results for the current iteration.
   ! If converged, print out footer as well.
   ! NOTE: must have called put_table_head before!
      flush :: BIN, optional

      if (NOT .output) return

      if (NOT .scf_done) then

         ! Set margin notes ...
         .set_margin_info

         ! Set table body (leaky)
         if (NOT .fitting) then
            .table(1).create_values([.iteration])
            .table(2).create_values([.energy])
            .table(3).create_values([.delta])
            .table(4).create_values([.diis_error])
            .table(5).create_values(.table_info)
            .table(5).force_width(0)
         else
            .table(1).create_values([.iteration])
            .table(2).create_values([.lambda])
            .table(3).create_values([.penalty])
            .table(4).create_values([.energy])
            .table(5).create_values([.fit_value])
            .table(6).create_values([.fit_value-.old_fit_value])
            .table(7).create_values([.diis_error])
            .table(8).create_values(.table_info)
            .table(8).force_width(0)
         end

         ! Put out the body
         .table.put_body

         ! Clear columns for next time (UNleaky!)
         .table.clear_columns

      else ! the SCF is done ...

        .table.put_footer

        stdout.flush
        if (.converged) then; stdout.text("* * * SCF has converged * * *")
        else;                 stdout.text("* * * SCF has not converged * * *")
        end

        .table.put_footer(flush=flush)

        if (.fitting AND NOT .will_exceed_lambda_max) then
           .put_crystal_footer
           .table.put_headings
        end

      end

   end

