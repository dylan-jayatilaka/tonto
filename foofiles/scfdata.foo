   end

   nullify_ptr_part ::: pure
   ! Nullify the pointer parts of self
      self :: INOUT

      .diis.nullify_ptr_part

      nullify(.CP_diis)
      nullify(.crystal)
      nullify(.cluster)
      nullify(.cluster_charges)
      nullify(.cluster_charge_positions)
      nullify(.table_info)
      nullify(.table)

   end

   destroy_ptr_part ::: leaky, PURE
   ! Destroy the pointer parts of self
      self :: INOUT

      .diis.destroy_ptr_part

      .CP_diis.destroy
