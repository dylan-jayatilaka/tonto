   ! Make the list of Koenderinks shape index values "si"
      self :: IN
      si :: VEC{REAL}, OUT

   ENSURE(.n_pt>0,"no isosurface points")
   ENSURE(si.dim==.n_pt,"wrong size, SI")

      k1,k2 :: VEC{REAL}*

      ! Get curvatures
      k1.create(.n_pt)
      k2.create(.n_pt)
      .make_principal_curvatures(k1,k2)

