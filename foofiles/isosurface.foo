      val = n_i.to_str.trim // " " // n_e.to_str.trim
      stdout.show("begin binned_d_i_d_e_colors ",trim(val),dots=FALSE)

      ! Print the bins
      do i = 1,n_i
      do e = 1,n_e
         stdout.put(i)
         stdout.put(e)
         RGB255 = .colour.RGB255_for(real(bin_count(i,e),kind=REAL_KIND))
         stdout.put(RGB255(1))
         stdout.put(RGB255(2))
         stdout.put(RGB255(3))
         stdout.flush
      end
      end
      stdout.text("end binned_d_i_d_e_colors")

      ! Clean
      bin_count.destroy

   end

