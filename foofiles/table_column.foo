   end

   set_values_and_errors(r,e)
   ! Set the column values "r" and errors "e"
      self :: INOUT
      r :: VEC{REAL}, target
      e :: VEC{REAL}, target

   DIE_IF(.values_set,"column has already been set!")

      .r_values => r
      .e_values => e
      .set_width_from(r,e)

   end

