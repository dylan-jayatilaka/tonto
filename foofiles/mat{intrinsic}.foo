   to_outer_product_of(a,fac) ::: PURE
   ! Set "self" to the outer product of "a" with itself, with an
   ! optional scale factor "fac".
      self :: INOUT
      a :: VEC{A?}, IN
      fac :: FAC?, optional, IN

   ENSURE(.is_square,"self is not square")
   ENSURE(a.dim==.dim1,"incomptabile a")

      i,j :: INT

      if (NOT present(fac)) then

          do i = 1,.dim1
          do j = 1,.dim1
