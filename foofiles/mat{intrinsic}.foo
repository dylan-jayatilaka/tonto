      end

   end

   diagonal_set_to(d) ::: PURE
   ! Get the diagonal elements of "self" in vector "d"
      self :: IN
      d :: VEC{INTRINSIC}, OUT

   ENSURE(d.dim==min(.dim1,.dim2),"diag vector is incompatible")

      i :: INT
      do i = 1,d.dim
