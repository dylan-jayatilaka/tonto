   cross(v) result (res) ::: pure
   ! Return the cross product of "self" and "v".
      self :: IN
      v :: VEC{INTRINSIC}, IN
      res :: VEC{INTRINSIC}(3)

   ENSURE(.dim==3,"self must have dimension 3")

      res(1) = self(2)*v(3) - v(2)*self(3)
