   alpha result (res) ::: PURE
   ! return the alpha sector of the vector
      self :: IN
      res :: VEC{INTRINSIC}(.dim/2)

   ENSURE(.dim.is_even,"self is not even-dimensioned")

      n :: INT

      n   = .dim/2
      res = self(1:n)

   end

   beta result (res) ::: PURE
   ! return the beta sector of the vector
      self :: IN
      res :: VEC{INTRINSIC}(.dim/2)

   ENSURE(.dim.is_even,"self is not even-dimensioned")

      n :: INT

      n   = .dim/2
      res = self(n+1:2*n)

   end

