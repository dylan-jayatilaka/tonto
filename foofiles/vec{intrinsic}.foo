   beta_put_to(X) ::: PURE
   ! Put the beta sector to the vector "X"
      self :: IN
      X :: VEC{INTRINSIC}, OUT

   ENSURE(.dim.is_even,"self is not even-dimensioned")
   ENSURE(X.dim==.dim/2,"wrong size, X")

      n :: INT

      n = .dim/2
      X = self(n+1:2*n)

