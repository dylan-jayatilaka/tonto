   localize_MOs ::: leaky
   ! Localize the MO's

   ENSURE(.molecular_orbitals.created,"no MO's")
   ENSURE(.molecular_orbitals.restricted.created,"no MO's")
   ENSURE(.basis_info_made, "no basis info")
   ENSURE(.atom.created, "no atom info")

      D,Q :: MAT3{REAL}*

