program run_MPI_TEST
   USE SYSTEM_MODULE
#ifdef MPI   
   USE mpi, only: MPI_WIN_LOCK
   USE mpi, only: MPI_WIN_UNLOCK
   USE mpi, only: MPI_LOCK_EXCLUSIVE
#endif   
   implicit none

   dim,num,it,iter :: INT
   start, finish, tol :: REAL
   w,x,y :: INT
   val :: STR
   
   ! Macro to create Tonto system object
   ! Initialise MPI parallel stuff too.
   TONTO_CREATE
   

   ! Initialise standard I/O files.
   ! Always have this.
   std_time.start_timing
   
   tonto.p_loop_ubound = 28
   tonto.p_loop_index = 1
   tonto.win_create(tonto.p_loop_index,1,0,w)
   
   y = 0
   x = 1
   do

      if(tonto.p_loop_index > tonto.p_loop_ubound) exit
#ifdef MPI      
      call MPI_WIN_LOCK(MPI_LOCK_EXCLUSIVE,tonto.master_rank,0,w,tonto.mpi_error)
      if(NOT tonto.is_master_processor) then
         tonto.fetch_and_op_sum(x,tonto.p_loop_index,tonto.master_rank,0,w)
         if (y == 0) then
            y = 1
            call MPI_WIN_UNLOCK(tonto.master_rank,w,tonto.mpi_error)
            cycle
         end if
         print*, tonto.processor_rank,tonto.p_loop_index
      else
         print*, tonto.processor_rank,tonto.p_loop_index
         tonto.p_loop_index = tonto.p_loop_index + 1
      end if
      call MPI_WIN_UNLOCK(tonto.master_rank,w,tonto.mpi_error)
#endif
   
   end do


   
   ! Clean-up files

   ! Clean-up tonto system
   TONTO_DESTROY

end






